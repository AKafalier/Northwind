
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECommerce</title>
    <!--Bootstrap-->
    <link href="~/css/bootstrap.css" rel="stylesheet" />

    <!--Custom Css-->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-dark">
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">E Commerce</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Product" asp-action="Index">Shop</a>
                    </li>
                    <div class="collapse navbar-collapse" id="navDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categories
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" id="navbarDropdownLink">

                                </ul>
                            </li>
                        </ul>
                    </div>
                </ul>
                <div class="d-flex">
                    <a class="btn btn-light" type="submit" asp-controller="Cart" asp-action="Index" id="cartCount">0
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!--Main Start-->
            @RenderBody()
    <!--Main End-->
    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright © Your ECommerce Company 2023</div></div>
                <div class="col-auto">
                    <a class="link-light small" asp-controller="Home" asp-action="Index">Home</a>
                    <span class="text-white mx-1">·</span>
                    <a class="link-light small" asp-controller="Shop" asp-action="Index">Shop</a>
                    <span class="text-white mx-1">·</span>
                    <a class="link-light small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>
    </main>


    <!--Jquery-->
    <script src="~/js/jquery.js"></script>
    <!--Bootstrap Js-->
    <script src="~/js/bootstrap.js"></script>
    <!--Bundle Js-->
    <script src="~/js/bootstrap.bundle.js"></script>
    <!------->
    <!--SweetAlert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--Custom Js-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>